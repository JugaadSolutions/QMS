@model QMS.Models.Patient

@{
    ViewBag.Title = "Patient Selection";
}
<h1>@ViewBag.CounterName</h1>
<h2>Patient Selection</h2>


  
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
   
    <fieldset >
        
        <legend>Patient Selection Form</legend>
        <ol >
            <li>
                <h1 >@ViewBag.totalpatient 
                      
                </h1> 
            </li>
           
        </ol>
        @{ 
    if (ViewBag.No_of_Pateints > 0)
    {
        <input id="newbtn" type="button" value="NEW" onclick="@("window.location.href='" + @Url.Action("Announce", "Announcement") + "'")    ;" />
    }
    else
    {
                 <input type="button" id="dnewbtn" value="NEW" disabled="disabled"  style="height:30px;  width:120px;" />
             
    }
         } 
          
        
    </fieldset>
       
}