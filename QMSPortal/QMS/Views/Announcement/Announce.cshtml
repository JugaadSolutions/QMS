@model QMS.Models.Patient

@{
    ViewBag.Title = "Announcement";
}

<h2>Announcement</h2>
@using (Html.BeginForm("Announce", "Announcement", new { pid = @Model.PatientId }, FormMethod.Post, new { status = "submitform" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

   
<fieldset style="height:100%; width:100%; text-align:left; margin-left:200px" >
        <legend>Announcement Form</legend>
        <ol >
            <li style="display:inline-block">
              @Html.LabelFor(m => m.Token, new {@class="lbl" })
                @Html.TextBoxFor(m => m.Token, new {@class="txt" })
                </li>
            </ol>
           <ol >    
              <li style="display:inline-block">
               @Html.LabelFor(m => m.PatientId, new {@class="lbl" })
                  @Html.TextBoxFor(m => m.PatientId, new {@class="txt" })
              
           </li>
        </ol>   
     <ol >    
              <li style="display:inline-block">
               @Html.LabelFor(m => m.PatientName, new {@class="lbl" })
                  @Html.TextBoxFor(m => m.PatientName, new {@class="txt" })
              
           </li>
        </ol>   
     <ol >    
              <li style="display:inline-block">
               @Html.LabelFor(m => m.Status, new {@class="lbl" })
                  @Html.TextBoxFor(m => m.Status, new {@class="txt" })
              
           </li>
        </ol>   
    </fieldset>
<div>
        <Button type="submit" id="btncall" name="Command" value="CALL"  onclick="$('#submitform').submit()">CALL</Button>
        <Button type="submit" id="btnmissed" name="Command" value="MISSED" onclick="$('#submitform').submit()">MISSED</Button>
        <Button type="submit" id="done" name="Command" value="DONE" onclick="$('#submitform').submit()">DONE</button> 
</div>
   
}      