@model QMS.Models.User

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset style="height:100%; width:100%; text-align:left; margin-left:200px">
        <legend>Registration Form</legend>
        <ol >
            <li style="display:inline-block">
              @Html.LabelFor(m => m.Name, new {@class="lbl" })
                @Html.TextBoxFor(m => m.Name, new {@class="txt" })
                </li>
            </ol>
           <ol >    
              <li style="display:inline-block">
               @Html.LabelFor(m => m.Password, new {@class="lbl" })
                  @Html.PasswordFor(m => m.Password, new {@class="txt" })
              
           </li>
        </ol>  
         </fieldset>
    <div>
         <form method="Post">
        <input type="submit"  value="Login" onclick="@("window.location.href='" + @Url.Action("Login", "Admin",new{name=Model.Name,pwd=Model.Password}) + "'")    ;" />
             </form>
   </div>
}